        <Popup Name="NextRoundPopup" Width="200" Height="100" IsOpen="False" Placement="Center" VerticalOffset="-268">
            <Button Name="NextRoundPopupText" Background="{StaticResource Popup}" FontSize="24" Click="NextRoundClick" >
                Player 1's turn
            </Button>
        </Popup>

        <Popup Name="NewGamePopup" Width="300" Height="100" IsOpen="False" Placement="Center" VerticalOffset="-268">
            <Button Background="{StaticResource Popup}" FontSize="24" Click="NewGameClick">
                <TextBlock Name="NewGamePopupText" Text="Player 1 controlled 9 spaces and got 9 points!" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </Popup>

        <Popup Name="MatchEndPopup" Width="400" Height="300" IsOpen="False" Placement="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Name="MatchEndPopupText" Background="{StaticResource PopupDark}" 
                               Grid.ColumnSpan="2" FontSize="48" Text="Player 1 controlled 9 spaces and got 9 points!" 
                               TextWrapping="Wrap" TextAlignment="Center"/>
                <Button Grid.Row="1" Content="New Game"
                    Background="{StaticResource Popup}" FontSize="30" Click="NewMatchClick" />
                <Button Grid.Row="1" Grid.Column="1" Content="Quit"
                    Background="{StaticResource Popup}" FontSize="30" Click="QuitClick" />

            </Grid>

        </Popup>

        <Popup Name="ShowRecordsPopup" Width="600" Height="500" IsOpen="False" Placement="Center">
            <Grid Background="{StaticResource GridDark}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <TextBlock Text="Game Records" Foreground="{StaticResource Background}"
                           Grid.Row="1" Grid.Column="1"/>
                <TextBlock Name="Records" Text="2019-08-15: Victor won against Aziraphale (AI) with 17 points against 8" 
                           Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap"
                           Background="{StaticResource Background}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                           FontSize="16" />
                <Button Name="ExitRecords" Grid.Row="4" Grid.Column="2" Click="ExitRecordsClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Close" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
            </Grid>
        </Popup>

        <Popup Name="RulesPopup" Width="800" Height="700" IsOpen="False" Placement="Center">
            <Grid Background="{StaticResource GridDark}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <TextBlock Name="RulesTitle" Text="Rules" Foreground="{StaticResource Background}"
                           Grid.Row="1" Grid.Column="1"/>
                <Image Name="RulesImage" Source="{StaticResource Rules_Page_1}"
               Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
                </Image>
                <Button Name="Forward" Grid.Row="4" Grid.Column="1" Click="PreviousRulePageClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Previous Page" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="Back" Grid.Row="4" Grid.Column="3" Click="NextRulePageClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Next Page" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="ExitRules" Grid.Row="4" Grid.Column="2" Click="ExitRulesClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Close" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
            </Grid>
        </Popup>

        <Popup Name="SettingsPopup" Width="352" Height="352" IsOpen="False" Placement="Center">
            <Grid Background="{StaticResource GridDark}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
