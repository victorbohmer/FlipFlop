        <Button x:Name="Player_2_Card_1" Grid.Column="1" Grid.Row="14" Background="{StaticResource BackgroundDark}" 
                Click="PlayerCardClick" RenderTransformOrigin="0.5,0.5" >
            <Image x:Name="Player_2_Card_1_Image" Source="{StaticResource card back}" />
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
