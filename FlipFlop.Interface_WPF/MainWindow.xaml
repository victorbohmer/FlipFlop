            </Button.RenderTransform>
        </Button>

        <TextBlock Name="Player_2_Name" Text="Player 2" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" 
                   Grid.Row="15" Grid.Column="3" Grid.ColumnSpan="5"/>
        
        <Image Source="{StaticResource card back}"
               Grid.Row="15" Grid.Column="7" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Player_2_Score" Text="0" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" 
                   Grid.Row="15" Grid.Column="7"/>

    </Grid>
</Window>
