    </Window.Resources>
    <Grid Background="{StaticResource Background}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="96" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="48" />
            <RowDefinition Height="96" />
            <RowDefinition Height="24" />
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="96" />
            <RowDefinition Height="16" />
            <RowDefinition Height="96" />
            <RowDefinition Height="16" />
            <RowDefinition Height="96" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
            <RowDefinition Height="96" />
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Popup Name="NextRoundPopup" Width="200" Height="100" IsOpen="True" Placement="Center" VerticalOffset="-268">
            <Button Name="NextRoundPopupText" Background="{StaticResource Popup}" FontSize="24" Click="NextRoundClick" >  
                Player 1's turn
            </Button>
        </Popup>

        <Popup Name="NewGamePopup" Width="300" Height="100" IsOpen="False" Placement="Center" VerticalOffset="-268">
            <Button Background="{StaticResource Popup}" FontSize="24" Click="NewGameClick">
                <TextBlock Name="NewGamePopupText" Text="Player 1 controlled 9 spaces and got 9 points!" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </Popup>

        <Popup Name="MatchEndPopup" Width="400" Height="200" IsOpen="False" Placement="Center">
            <Button Background="{StaticResource PopupDark}" FontSize="48">
                <TextBlock Name="MatchEndPopupText" Text="Player 1 controlled 9 spaces and got 9 points!" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </Popup>

        <TextBlock Text="Player 1" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" 
                   Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="5"/>
        <Image Source="{StaticResource card back}"
               Grid.Row="1" Grid.Column="7" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Player_1_Score" Text="0" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" 
                   Grid.Row="1" Grid.Column="7"/>
        
        
        <Button x:Name="Player_1_Card_1" Grid.Column="1" Grid.Row="2" Background="{StaticResource BackgroundDark}" Click="PlayerCardClick">
            <Image x:Name="Player_1_Card_1_Image" Source="{StaticResource card back}" />
        </Button>
        <Button x:Name="Player_1_Card_2" Grid.Column="3" Grid.Row="2" Background="{StaticResource BackgroundDark}" Click="PlayerCardClick">
            <Image x:Name="Player_1_Card_2_Image" Source="{StaticResource card back}" />
        </Button>
        <Button x:Name="Player_1_Card_3" Grid.Column="5" Grid.Row="2" Background="{StaticResource BackgroundDark}" Click="PlayerCardClick">
            <Image x:Name="Player_1_Card_3_Image" Source="{StaticResource card back}" />
        </Button>
        <Button x:Name="Player_1_Card_4" Grid.Column="7" Grid.Row="2" Background="{StaticResource BackgroundDark}" Click="PlayerCardClick">
            <Image x:Name="Player_1_Card_4_Image" Source="{StaticResource card back}" />
        </Button>
        <Button x:Name="Player_1_Card_5" Grid.Column="9" Grid.Row="2" Background="{StaticResource BackgroundDark}" Click="PlayerCardClick">
            <Image x:Name="Player_1_Card_5_Image" Source="{StaticResource card back}" />
        </Button>

        <TextBlock Grid.Column="2" Grid.ColumnSpan="7"
                   Grid.Row="5" Grid.RowSpan="7"
                   Background="{StaticResource GridDark}" />

        <Button x:Name="Played_Card_1_1" Grid.Column="3" Grid.Row="6" Background="{StaticResource Grid}" 
                Click="BoardSpaceClick" RenderTransformOrigin="0.5,0.5">
            <Image x:Name="Played_Card_1_1_Image" />
            <Button.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
