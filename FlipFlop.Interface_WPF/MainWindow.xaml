                    <RowDefinition Height="4*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Text="P1 Name" Grid.Row="1" Grid.Column="1" Background="{StaticResource Grid}"
                           TextAlignment="Center" FontSize="20" />
                <TextBox Name="Player1NameInput" Grid.Row="2" Grid.Column="1" Background="AliceBlue"
                         Text="Player 1"  TextAlignment="Center" FontSize="20" />

                <TextBlock Text="P2 Name" Grid.Row="1" Grid.Column="3" Background="{StaticResource Grid}"
                           TextAlignment="Center" FontSize="20" />
                <TextBox Name="Player2NameInput" Grid.Row="2" Grid.Column="3" Background="AliceBlue"
                         Text="Player 2"  TextAlignment="Center" FontSize="20" />
                
                <Button Name="AIModeOn" Grid.Row="4" Grid.Column="1" Click="AIModeOnClick"
                    Background="{StaticResource BackgroundDark}">
                    <TextBlock TextWrapping="Wrap" Text="AI Mode
                               On" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="AIModeOff" Grid.Row="4" Grid.Column="3" Click="AIModeOffClick"
                    Background="{StaticResource Background}">
                    <TextBlock TextWrapping="Wrap" Text="AI Mode
                               Off" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="GameLengthShort" Grid.Row="6" Grid.Column="1" Click="GameLengthShortClick"
                    Background="{StaticResource BackgroundDark}">
                    <TextBlock TextWrapping="Wrap" Text="Game Length
                               Short" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="GameLengthLong" Grid.Row="6" Grid.Column="3" Click="GameLengthLongClick"
                    Background="{StaticResource Background}">
                    <TextBlock TextWrapping="Wrap" Text="Game Length
                               Long" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="ShowRecords" Grid.Row="8" Grid.Column="1" Click="ShowRecordsClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Records" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="ShowRules" Grid.Row="9" Grid.Column="1" Click="ShowRulesClick"
                    Background="{StaticResource Grid}">
                    <TextBlock TextWrapping="Wrap" Text="Rules" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <Button Name="ExitSettings" Grid.Row="8" Grid.Column="3" Click="ExitSettingsClick"
                    Background="{StaticResource Grid}" Grid.RowSpan="2">
                    <TextBlock TextWrapping="Wrap" Text="Confirm" FontSize="20" TextAlignment="Center" VerticalAlignment="Center" />
                </Button>

            </Grid>
        </Popup>

        <Button Name="OpenSettings" Grid.Column="1" Grid.Row="8" Background="{StaticResource Background}" 
